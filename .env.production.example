# MecFinder Backend - Production Environment Configuration
# Copy this to .env and fill in actual values

# ====================
# REQUIRED - Server will NOT start without these in production
# ====================

# MongoDB Connection
MONGO_URI=mongodb://username:password@your-mongo-host:27017/mecfinder?authSource=admin

# JWT Secrets - Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-64-byte-hex-secret-here
JWT_REFRESH_SECRET=your-64-byte-hex-refresh-secret-here

# Twilio OTP Service
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_VERIFY_SID=VAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ====================
# REQUIRED FOR REDIS FEATURES (Scaling, Caching, Job Queue)
# ====================

REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_USERNAME=default
REDIS_PASSWORD=your-redis-password

# ====================
# PAYMENT & EXTERNAL SERVICES
# ====================

# Razorpay
RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your-razorpay-secret

# Cloudinary (Image Uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Firebase (Push Notifications)
# Place firebase-admin-sdk.json in /config folder
FIREBASE_PROJECT_ID=your-firebase-project-id

# ====================
# SERVER CONFIGURATION
# ====================

NODE_ENV=production
PORT=3000

# CORS - Comma separated list of allowed origins
CORS_ORIGIN=https://admin.mecfinder.com,https://app.mecfinder.com

# ====================
# OPTIONAL - Development Settings
# DO NOT SET THESE IN PRODUCTION
# ====================

# DEV_OTP=true  # DANGER: Never enable in production!
# LOG_TO_FILE=true
# LOG_DIR=./logs

# ====================
# FEATURE FLAGS
# ====================

# ENABLE_BULL_QUEUE=true  # Enable background job processing
# ENABLE_SOCKET_REDIS=true  # Enable Socket.IO Redis adapter for scaling
